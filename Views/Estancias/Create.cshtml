@model Mokki.Models.Estancia

@{
    ViewData["Title"] = "Create";
}

<h1>Publica tu estancia</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Duracion" class="control-label">Duración en días (Mínimo: 7 días)</label>
                <input asp-for="Duracion" class="form-control" />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label">Foto (Del alojamiento, del entorno, lo que quieras...)</label>
                <input type="file" asp-for="Foto" class="form-control-file" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear estancia" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

