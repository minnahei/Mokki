@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crea una cuenta nueva:</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Apellidos"></label>
                <input asp-for="Input.Apellidos" class="form-control" />
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Provincia"></label>
                <input asp-for="Input.Provincia" class="form-control" />
                <span asp-validation-for="Input.Provincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Telefono"></label>
                <input asp-for="Input.Telefono" class="form-control" />
                <span asp-validation-for="Input.Telefono" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Input.TipoUser" class="form-check-input" type="radio" name="Input.TipoUser" value="anfitrion" id="anfitrion">
                <label class="form-check-label" for="anfitrion">Soy Anfitrión</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Input.TipoUser" class="form-check-input" type="radio" name="Input.TipoUser" value="huesped" id="huesped">
                <label class="form-check-label" for="huesped">Soy Huésped</label>
            </div>
            <div class="form-group" id="pueblo" style="display:none;">
                <label asp-for="Input.Pueblo"></label>
                <input asp-for="Input.Pueblo" class="form-control" />
                <span asp-validation-for="Input.Pueblo" class="text-danger"></span>
            </div>
            <div class="form-group" id="ciudad" style="display:none;">
                <label asp-for="Input.Ciudad"></label>
                <input asp-for="Input.Ciudad" class="form-control" />
                <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Foto">Foto de usuario (la foto de la estancia la subirás más adelante)</label>
                <input asp-for="Input.Foto" type="file" class="form-control-file">
                <span asp-validation-for="Input.Foto"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
